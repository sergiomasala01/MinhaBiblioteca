@model MBiblioteca.Models.LivroModel;

@{
    ViewData["Title"] = "Excluir";
}

<h2 style="margin-top: 40px">Deletar Livro</h2>

<form asp-action="Delete" class="row g-3" style="margin-top: 40px">

    <h4>Deseja mesmo excluir esse livro?</h4>

    <div class="col-md-4">
        <label asp-for="Titulo" class="form-label">Titulo</label>
        <input asp-for="Titulo" class="form-control" disabled>
    </div>
    <div class="col-md-4">
        <label asp-for="Autor" class="form-label">Autor</label>
        <input asp-for="Autor" class="form-control" id="Autor" disabled>
    </div>
    <div class="col-4">
        <label asp-for="Genero" class="form-label">Gênero</label>
        <input asp-for="Genero" class="form-control" id="Genero" disabled>
    </div>
    <div class="col-9">
        <label asp-for="Sinopse" class="form-label">Sinopse</label>
        <textarea asp-for="Sinopse" class="form-control" aria-label="With textarea" disabled></textarea>
    </div>
    <div class="col-md-3">
        <label asp-for="AnoPublicacao" class="form-label">Data de Publicação</label>
        <input asp-for="AnoPublicacao" type="date" class="form-control" id="DataPublicacao" disabled>
    </div>
    <div class="col-12">
        <button asp-action="Index" class="btn btn-warning">Voltar</button> |
        <button type="submit" class="btn btn-danger">Excluir</button>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}